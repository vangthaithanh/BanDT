@model WebDienThoai.Models.LoginViewModel
@{
    // Loại bỏ Layout cũ
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập | HANDPHONE</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="stylesheet" href="@Url.Content("~/Content/Login.css")">
</head>
<body>

    <a href='@Url.Action("Index", "Home")' class="back-btn">
        <i class="fas fa-arrow-left"></i>
        <span>Quay về trang chủ</span>
    </a>

    <div class="login-container">
        <div class="form-header">
            <img src="@Url.Content("~/Content/Anh/logo/headerlogo.png")" alt="HANDPHONE STORE Logo" style="width: 100px; margin-bottom: 10px;">
            <p class="form-title" style="color: #333;">Đăng nhập với</p>
        </div>

        @if (TempData["RegisterSuccess"] != null)
        {
            <div class="alert alert-success text-center" style="margin-bottom: 20px;">
                @TempData["RegisterSuccess"]
            </div>
        }

        <div class="social-login">
            <button type="button" class="social-btn">
                <img src="~/Content/Anh/logo/logodangnhap1.png" alt="Logo Google" style="width: 25px; height: 25px;">
            </button>
            <button type="button" class="social-btn">
                <img src="~/Content/Anh/logo/logodangnhap2.png" alt="Logo Zalo" style="width: 25px; height: 25px;">
            </button>
        </div>

        <div class="divider">
            <span>Hoặc</span>
        </div>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger text-center mb-3" })

            <div class="form-group">
                @Html.LabelFor(m => m.UserName, "Nhập tên đăng nhập")
                <div class="input-wrapper">
                    @Html.TextBoxFor(
                        m => m.UserName,
                        new
                        {
                            placeholder = "Tên đăng nhập",
                            required = "required"
                        })
                    <span class="input-icon"><i class="fas fa-user"></i></span>
                </div>
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger small mt-1" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, "Nhập mật khẩu")
                <div class="input-wrapper">
                    @Html.PasswordFor(
                        m => m.Password,
                        new
                        {
                            placeholder = "Mật khẩu",
                            required = "required"
                        })
                    <span class="input-icon"><i class="fas fa-lock"></i></span>
                </div>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small mt-1" })
            </div>

            <button type="submit" class="btn-submit">Đăng nhập</button>
        }

        <div class="register-link">
            <a href="#" class="forgot-link">
                Bạn quên mật khẩu?
            </a><br /><br />
            Bạn chưa có tài khoản? @Html.ActionLink("Đăng ký ngay", "Register", "Account")
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

</body>
</html>