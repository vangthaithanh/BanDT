@model WebDienThoai.Models.DoiMatKhau
@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4" style="max-width:520px;">
    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <h3 class="text-center mb-4 fw-bold">Đổi mật khẩu</h3>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            @using (Html.BeginForm("DoiMatKhau", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger mb-2" })

                <div class="mb-3">
                    <label class="form-label fw-semibold">Mật khẩu hiện tại</label>
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Nhập mật khẩu hiện tại" })
                    @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger small"})
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Mật khẩu mới</label>
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Nhập mật khẩu mới" })
                    @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger small" })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Nhập lại mật khẩu mới</label>
                    @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control", placeholder = "Nhập lại mật khẩu mới" })
                    @Html.ValidationMessageFor(m => m.ConfirmNewPassword, "", new { @class = "text-danger small" })
                </div>

                <button type="submit" class="w-100 btn fw-bold text-uppercase custom-btn">Cập nhật</button>
            }
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
