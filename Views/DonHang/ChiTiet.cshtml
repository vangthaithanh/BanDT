@model List<WebDienThoai.Models.LichSuDonHang>
@using System.Linq
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var dh = Model.First();
    var tongSL = Model.Sum(x => x.SoLuong);
}

<main class="container-fluid px-4 px-lg-5 py-4 py-lg-5">
    @Html.Action("ThongTinCNPartial", "Account")
    <div class="row g-4">
        @Html.Partial("_MenuQLTK")

        <div class="col-12 col-lg-9">
            <div class="bg-white rounded-3 shadow-sm p-4">

                <div class="d-flex justify-content-between align-items-center border-bottom pb-3 mb-3">
                    <div>
                        <div class="fw-bold">Đơn hàng #@dh.MaHD</div>
                        <div class="text-secondary small">
                            Ngày đặt: @dh.NgayLap.ToString("dd/MM/yyyy")
                            <span class="mx-2">|</span>
                            Trạng thái giao: <b>@(dh.TrangThaiGiaoHang ?? "Chưa tạo giao hàng")</b>
                        </div>
                        <div class="text-secondary small">
                            Trạng thái hóa đơn: <b>@dh.TrangThaiHoaDon</b>
                        </div>
                    </div>

                    <a href="@Url.Action("LichSuMuaHang", "DonHang")" class="btn btn-outline-secondary btn-sm rounded-pill">
                        Quay lại
                    </a>
                </div>

                <div class="mb-3 text-secondary">
                    Tổng số lượng: <b>@tongSL</b> | Tổng thanh toán: <b>@String.Format("{0:N0}đ", dh.ThanhTien)</b>
                </div>

                <div class="border rounded-3">
                    @foreach (var sp in Model)
                    {
                        <div class="d-flex align-items-center gap-3 p-3 border-bottom">
                            <img src="~/Content/Anh/sanpham/@sp.Anh"
                                 alt="@sp.TenSP"
                                 class="rounded-2 border"
                                 style="width:70px;height:70px;object-fit:cover;" />

                            <div class="flex-grow-1">
                                <div class="fw-semibold">@sp.TenSP</div>
                                <div class="small text-secondary">
                                    SL: <b>@sp.SoLuong</b>
                                    <span class="mx-2">|</span>
                                    Đơn giá: <b>@String.Format("{0:N0}đ", sp.DonGia)</b>
                                </div>
                            </div>
                            <div class="text-end fw-bold">
                                <a class="btn btn-outline-secondary rounded-pill px-4 btn-sm fw-medium"
                                   href="@Url.Action("ChiTietSanPham", "Home", new { id = sp.MaSP })">
                                    Mua lại
                                </a>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</main>
